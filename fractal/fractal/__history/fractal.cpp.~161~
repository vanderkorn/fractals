__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
   //	ComboBoxType= new TComboBox(this);
   //	ComboBoxType->Parent = this;
//ComboBoxType->SetBounds(20,30,widthh,heighth/4);
	//ComboBoxType->Clear();
	
  /*	ComboBoxType->AddItem("Мандельброт",Owner);
